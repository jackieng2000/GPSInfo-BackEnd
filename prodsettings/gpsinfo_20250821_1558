server {
    listen 443 ssl;
    server_name jackieng.hk www.jackieng.hk;
    
    ssl_certificate /etc/letsencrypt/live/jackieng.hk/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/jackieng.hk/privkey.pem;
    
    root /home/jackieng/GPSInfo-Gordon/dist;
    index index.html;
    
    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    
    location / {
        # For requests to root, serve the geo_pages1 content
        root /home/jackieng/GPSInfo-Gordon/dist/geo_pages1;
        try_files $uri $uri/ /index.html;
    }
    
    location /geo_pages1/ {
        alias /home/jackieng/GPSInfo-Gordon/dist/geo_pages1/;
        try_files $uri $uri/ /index.html;
    }
    
    location ~ \.js$ {
        add_header Content-Type application/javascript;
    }
    
    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}