server {
    listen 80;
    server_name jackieng.hk www.jackieng.hk jackieng;
    return 301 https://$host$request_uri;
}

# Frontend on HTTPS (port 443)
server {
    listen 443 ssl;
    server_name jackieng.hk www.jackieng.hk jackieng;

    ssl_certificate /etc/letsencrypt/live/jackieng.hk/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/jackieng.hk/privkey.pem;

    root /home/jackieng/GPSInfo-FrontEnd/dist;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /assets/ {
        root /home/jackieng/GPSInfo-FrontEnd/dist;
    }

    location = /favicon.ico {
        root /home/jackieng/GPSInfo-FrontEnd/dist;
        try_files /favicon.ico /favicon.ico;
    }
}

# Backend on HTTPS (port 8000)
server {
    listen 8000 ssl;
    server_name jackieng.hk www.jackieng.hk jackieng;

    ssl_certificate /etc/letsencrypt/live/jackieng.hk/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/jackieng.hk/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}